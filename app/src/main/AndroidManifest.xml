<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tarek.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CategoriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingSongActivity"
            android:label="@string/activity_now_playing_song_label">
        </activity>
        <activity
            android:name=".NowPlayingListActivity"
            android:label="@string/now_playing_list_layout_label">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/search_layout_label">
        </activity>

    </application>

</manifest>