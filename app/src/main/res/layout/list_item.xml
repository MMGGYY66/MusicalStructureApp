<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/horizontal_linear_layouts_style">

    <!-- checkbox is been visible to move/copy/delete one or more  -->
    <CheckBox
        android:id="@+id/id_checkbox_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="invisible" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="3">

    <!-- song name -->
    <TextView
        android:id="@+id/id_song_name_list_item"
        style="@style/text_list_view_style" />

    <!-- singer / author  -->
    <TextView
        android:id="@+id/id_author_name_list_item"
        style="@style/text_list_view_style" />

</LinearLayout>

</LinearLayout>