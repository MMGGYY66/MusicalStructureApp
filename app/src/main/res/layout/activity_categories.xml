<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tarek.musicalstructureapp.MainActivity"
    style="@style/main_linear_layouts_style">

    <!-- 1st row : contains  list category , category name, search , delete and options buttons-->
    <LinearLayout
        style="@style/horizontal_linear_layouts_style">

        <!-- icon linked to list category -->
        <ImageView
            android:id="@+id/id_categories_list_icon"
            style="@style/icon_style"
            android:src="@drawable/ic_view_headline_black_48dp" />

        <!--  shows current category name  -->
        <TextView
            android:id="@+id/id_category_name_text_view"
            style="@style/text_style"
            android:text="@string/default_category_name"/>

        <!-- search icon linked to search activity-->
        <ImageView
            android:id="@+id/id_search_icon"
            style="@style/icon_style"
            android:src="@drawable/ic_search_black_48dp" />

        <!-- delete an item-->
        <ImageView
            android:id="@+id/id_delete_icon"
            style="@style/icon_style"
            android:src="@drawable/ic_delete_black_48dp" />

        <!-- more options list-->
        <ImageView
            android:id="@+id/id_options_icon"
            style="@style/icon_style"
            android:src="@drawable/ic_more_vert_black_48dp" />


    </LinearLayout>



    <!--list view to show current category-->
    <ListView
        android:id="@+id/id_category_list_view"
        android:layout_width="match_parent"
        android:tag="@string/category_list_view_folders"
        android:layout_height="@dimen/zero_value"
        android:layout_weight="10">
    </ListView>

    <!-- 2nd row : contains song name text view, skip previous , play song and skip next buttons-->
    <LinearLayout
        android:id="@+id/id_play_song_linearLayout"
        style="@style/horizontal_linear_layouts_style">

        <!-- Text view display song name  -->
        <TextView
            android:id="@+id/id_song_name_text_view"
            style="@style/text_style"
            android:layout_weight="3"
            android:text="@string/default_song_name" />


        <!-- skip and go back to previous song -->
        <ImageView
            android:id="@+id/id_skip_previous_icon"
            style="@style/icon_play_current_song_style"
            android:src="@drawable/ic_skip_previous_black_48dp"/>

        <!-- play/pause button (on/off) -->
        <ImageView
            android:id="@+id/id_play_song_icon"
            style="@style/icon_play_current_song_style"
            android:src="@drawable/ic_play_arrow_black_48dp"/>

        <!-- skip and go forward to next song -->
        <ImageView
            android:id="@+id/id_skip_next_icon"
            style="@style/icon_play_current_song_style"
            android:src="@drawable/ic_skip_next_black_48dp"/>


    </LinearLayout>





</LinearLayout>
