<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main_linear_layouts_style"
    tools:context="com.example.tarek.musicalstructureapp.NowPlayingSongActivity">

    <!-- 1st row : contains  list category , category name, search , delete and options buttons-->
    <LinearLayout style="@style/horizontal_linear_layouts_style_landscape">

        <!-- icon linked to list category -->
        <include layout="@layout/back_arrow_btn_merge"></include>

        <!--  shows current category name  -->
        <TextView
            android:id="@+id/id_category_name_text_view"
            style="@style/text_style"
            android:text="@string/default_now_playing_list_name" />


        <!-- delete an item-->
        <include layout="@layout/delete_btn_merge"></include>

        <!-- more options list-->
        <include layout="@layout/options_btn_merge"></include>
    </LinearLayout>


    <!--list view to show current category-->
    <include layout="@layout/list_view_layout_merge"></include>

    <!-- layout contains song name , skip previous , play song and skip next -->
    <include layout="@layout/play_song_h_layout"></include>


</LinearLayout>
